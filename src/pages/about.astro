---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro'

const pageTitle = "About Me";

const identity = {
    firstName: "Joe",
    location: "London",
    occupation: "Software Developer",
    hobbies: ["running", "Maths", "software development", "music"]
};

const skills = ["scala", "haskell", "purescript"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
        <style define:vars={{skillColor, fontWeight, textCase}}>
            h1 {
                color: purple;
                font-size: 4rem;
            }
            .skill{
                color: var(--skillColor);
                font-weight: var(--fontWeight);
                text-transform: var(--textCase);
            }
        </style>
        <h2>I am currently working through the Astro tutorial</h2>
        <p>Here are a few facts about me:</p>
        <ul>
            <li>My name is {identity.firstName}</li>
            <li>I life in {identity.location} and I work as a {identity.occupation}.</li>
            {identity.hobbies.length >= 2 &&
            <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
            }
        </ul>
        <p>My skills are:</p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>
        {happy && <p> I am happy</p>}
        {finished && <p> I am finished</p>}
        {goal == 3 ? <p> My goal is to finish in 3 days</p> : <p>My goal is not 3 days</p>}
</BaseLayout>

